import BaseLayout from "../layouts/BaseLayout.astro";
import "@splidejs/splide/css";

// Aggregate rating data (from all reviews, e.g., Google, Yelp, etc.)
const aggregateRating = {
    ratingValue: "4.8",
    reviewCount: "342",
    bestRating: "5"
};

// Featured testimonials to display on page
