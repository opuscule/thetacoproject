---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact Us | The Taco Project">
    <!-- Hero Section -->
    <section class="bg-hot-sauce py-20 px-5">
        <div class="container">
            <h1 class="font-futura text-crema text-[64px] lg:text-[120px] leading-[0.88] uppercase tracking-[-5px] mb-6">Get in Touch</h1>
            <p class="font-holiday text-crema text-[48px] leading-[1.3] rotate-[-2deg] max-w-[600px]">We'd love to hear from you!</p>
        </div>
    </section>

    <section id="contact_form" class="bg-sky relative py-[72px] px-[72px]">
        <div class="flex flex-col gap-[20px] items-start text-ink mb-[52px]">
            <h2 class="font-futura text-[104px] leading-[0.88] tracking-[-5px] uppercase text-ink">contact us</h2>
            <p class="font-geist font-normal text-[14px] leading-[1.4]">
                For PR/Marketing inquiries please contact <a href="mailto:Marketing@thetacoproject.com" class="underline decoration-solid">Marketing@thetacoproject.com</a>.
            </p>
        </div>

        <form class="max-w-[1136px] mx-auto flex flex-col gap-[30px]">
            <!-- First Row: First Name and Last Name -->
            <div class="flex gap-[22px] w-full">
                <div class="flex-1 flex flex-col gap-[14px]">
                    <label for="first_name" class="font-geist font-normal text-[14px] leading-[1.4] uppercase text-ink">First name</label>
                    <input type="text" id="first_name" name="first_name" required class="bg-crema rounded-[8px] px-[20px] py-[12px] font-geist text-[14px] leading-[1.4] text-ink border-none outline-none focus:ring-2 focus:ring-ocean transition" />
                </div>
                <div class="flex-1 flex flex-col gap-[14px]">
                    <label for="last_name" class="font-geist font-normal text-[14px] leading-[1.4] uppercase text-ink">Last name</label>
                    <input type="text" id="last_name" name="last_name" required class="bg-crema rounded-[8px] px-[20px] py-[12px] font-geist text-[14px] leading-[1.4] text-ink border-none outline-none focus:ring-2 focus:ring-ocean transition" />
                </div>
            </div>

            <!-- Second Row: Email and Phone Number -->
            <div class="flex gap-[22px] w-full">
                <div class="flex-1 flex flex-col gap-[14px]">
                    <label for="email" class="font-geist font-normal text-[14px] leading-[1.4] uppercase text-ink">Email</label>
                    <input type="email" id="email" name="email" required class="bg-crema rounded-[8px] px-[20px] py-[12px] font-geist text-[14px] leading-[1.4] text-ink border-none outline-none focus:ring-2 focus:ring-ocean transition" />
                </div>
                <div class="flex-1 flex flex-col gap-[14px]">
                    <label for="phone" class="font-geist font-normal text-[14px] leading-[1.4] uppercase text-ink">Phone number</label>
                    <input type="tel" id="phone" name="phone" class="bg-crema rounded-[8px] px-[20px] py-[12px] font-geist text-[14px] leading-[1.4] text-ink border-none outline-none focus:ring-2 focus:ring-ocean transition" />
                </div>
            </div>

            <!-- Third Row: Message Type -->
            <div class="flex flex-col gap-[14px]">
                <label for="message_type" class="font-geist font-normal text-[14px] leading-[1.4] uppercase text-ink">Message type</label>
                <select
                    id="message_type"
                    name="message_type"
                    required
                    class="bg-crema rounded-[8px] px-[20px] py-[12px] font-geist text-[14px] leading-[1.4] text-ink border-none outline-none focus:ring-2 focus:ring-ocean transition appearance-none cursor-pointer bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 fill=%27none%27 viewBox=%270 0 20 20%27%3E%3Cpath stroke=%27%23202020%27 stroke-linecap=%27round%27 stroke-linejoin=%27round%27 stroke-width=%271.5%27 d=%27m6 8 4 4 4-4%27/%3E%3C/svg%3E')] bg-[length:20px] bg-[right_20px_center] bg-no-repeat pr-[50px]"
                >
                    <option value="">Select a message type...</option>
                    <option value="general">General Inquiry</option>
                    <option value="catering">Catering</option>
                    <option value="feedback">Feedback</option>
                    <option value="careers">Careers</option>
                    <option value="press">Press & Media</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <!-- Fourth Row: Message -->
            <div class="flex flex-col gap-[14px]">
                <label for="message" class="font-geist font-normal text-[14px] leading-[1.4] uppercase text-ink">Message</label>
                <textarea id="message" name="message" required rows="6" class="bg-crema rounded-[8px] px-[20px] py-[12px] font-geist text-[14px] leading-[1.4] text-ink border-none outline-none focus:ring-2 focus:ring-ocean transition resize-none"></textarea>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-start">
                <button type="submit" class="bg-hot-sauce text-crema rounded-[8px] px-[20px] py-[8px] h-[44px] flex items-center gap-[8.877px] font-geist font-normal text-[14.203px] leading-[1.4] uppercase hover:opacity-90 transition-opacity">submit form</button>
            </div>
        </form>
    </section>

    <!-- Hours Section -->
    <section class="bg-sky py-16 px-5">
        <div class="container">
            <h2 class="font-futura text-ocean text-[64px] lg:text-[96px] leading-[0.88] uppercase tracking-[-5px] mb-8 text-center">Hours of Operation</h2>
            <div class="max-w-[600px] mx-auto">
                <div class="bg-ocean/10 rounded-2xl p-8 flex flex-col gap-4">
                    <div class="flex justify-between items-center">
                        <span class="font-futura text-ocean text-[20px] uppercase">Monday - Thursday</span>
                        <span class="font-geist text-ocean text-[16px]">11:00 AM - 9:00 PM</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="font-futura text-ocean text-[20px] uppercase">Friday</span>
                        <span class="font-geist text-ocean text-[16px]">11:00 AM - 10:00 PM</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="font-futura text-ocean text-[20px] uppercase">Saturday</span>
                        <span class="font-geist text-ocean text-[16px]">10:00 AM - 10:00 PM</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span class="font-futura text-ocean text-[20px] uppercase">Sunday</span>
                        <span class="font-geist text-ocean text-[16px]">10:00 AM - 9:00 PM</span>
                    </div>
                    <p class="font-holiday text-ocean text-[24px] rotate-[-2deg] text-center mt-4">Brunch served Saturdays & Sundays 11am-3pm</p>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
