    <script>
        // Location data
        const locations = {
            'tarrytown': { lat: 41.0763606, lng: -73.8591884, name: 'Tarrytown, NY', address: '18 Main St.' },
            'yonkers': { lat: 40.9720459, lng: -73.8820079, name: 'Yonkers, NY', address: '1086 N Broadway' },
