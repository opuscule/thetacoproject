  </head>
  <body>
    <a href="#" class="btn btn-primary">Primary</a>
    <a href="#" class="btn btn-secondary">Secondary</a>

    <!-- Press Ticker -->
    <section class="bg-hot-sauce py-6 overflow-hidden">
      <div class="flex gap-[72px] items-center px-[72px]">
