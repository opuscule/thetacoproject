import ScrollWiggle from "../components/ScrollWiggle.astro";

interface Props {
    title?: string;
    description?: string;
    ogImage?: string;
    ogUrl?: string;
    ogType?: "website" | "article" | "restaurant";
    schema?: Record<string, any>;
}

