        <script>
            // Desktop Mega Menu - Click and Hover
            document.addEventListener("DOMContentLoaded", () => {
                const triggers = document.querySelectorAll(".mega-menu-trigger");
                const panels = document.querySelectorAll(".mega-menu-panel");
                let hoverTimeout: ReturnType<typeof setTimeout> | null = null;
                let activeMenu: string | null = null;

                function openMenu(menuId: string) {
                    // Close all other menus first
                    panels.forEach((panel) => {
                        if (panel.getAttribute("data-menu") !== menuId) {
                            panel.classList.add("hidden");
                        }
                    });
                    triggers.forEach((trigger) => {
                        if (trigger.getAttribute("data-menu") !== menuId) {
                            trigger.setAttribute("aria-expanded", "false");
                        }
                    });

                    // Open the target menu
                    const panel = document.getElementById(`mega-menu-${menuId}`);
                    const trigger = document.querySelector(`.mega-menu-trigger[data-menu="${menuId}"]`);
                    if (panel && trigger) {
                        panel.classList.remove("hidden");
                        trigger.setAttribute("aria-expanded", "true");
                        activeMenu = menuId;
                    }
                }

                function closeMenu(menuId: string) {
                    const panel = document.getElementById(`mega-menu-${menuId}`);
                    const trigger = document.querySelector(`.mega-menu-trigger[data-menu="${menuId}"]`);
                    if (panel && trigger) {
                        panel.classList.add("hidden");
                        trigger.setAttribute("aria-expanded", "false");
                        if (activeMenu === menuId) {
                            activeMenu = null;
                        }
                    }
                }

                function closeAllMenus() {
                    panels.forEach((panel) => panel.classList.add("hidden"));
                    triggers.forEach((trigger) => trigger.setAttribute("aria-expanded", "false"));
                    activeMenu = null;
                }

                // Click handler
                triggers.forEach((trigger) => {
                    trigger.addEventListener("click", (e) => {
                        e.preventDefault();
                        const menuId = trigger.getAttribute("data-menu");
                        if (!menuId) return;

                        const isOpen = trigger.getAttribute("aria-expanded") === "true";
                        if (isOpen) {
                            closeMenu(menuId);
                        } else {
                            openMenu(menuId);
                        }
                    });

                    // Hover handlers
                    trigger.addEventListener("mouseenter", () => {
                        if (hoverTimeout) clearTimeout(hoverTimeout);
                        const menuId = trigger.getAttribute("data-menu");
                        if (menuId) openMenu(menuId);
                    });

                    trigger.addEventListener("mouseleave", () => {
                        hoverTimeout = setTimeout(() => {
                            const menuId = trigger.getAttribute("data-menu");
                            if (menuId) {
                                const panel = document.getElementById(`mega-menu-${menuId}`);
                                if (panel && !panel.matches(":hover")) {
                                    closeMenu(menuId);
                                }
                            }
                        }, 150);
                    });
                });

                // Panel hover handlers
                panels.forEach((panel) => {
                    panel.addEventListener("mouseenter", () => {
                        if (hoverTimeout) clearTimeout(hoverTimeout);
                    });

                    panel.addEventListener("mouseleave", () => {
                        hoverTimeout = setTimeout(() => {
                            const menuId = panel.getAttribute("data-menu");
                            if (menuId) closeMenu(menuId);
                        }, 150);
                    });
                });

                // Close menus when clicking outside
                document.addEventListener("click", (e) => {
                    const target = e.target as HTMLElement;
                    if (!target.closest(".mega-menu-trigger") && !target.closest(".mega-menu-panel")) {
                        closeAllMenus();
                    }
                });

                // Mobile Menu Toggle
                const mobileToggle = document.getElementById("mobile-menu-toggle");
                const mobilePanel = document.getElementById("mobile-menu-panel");
                const hamburgerIcon = mobileToggle?.querySelector(".hamburger-icon");
                const closeIcon = mobileToggle?.querySelector(".close-icon");

                mobileToggle?.addEventListener("click", () => {
                    const isOpen = mobileToggle.getAttribute("aria-expanded") === "true";
                    mobileToggle.setAttribute("aria-expanded", (!isOpen).toString());
                    mobilePanel?.classList.toggle("hidden");
                    hamburgerIcon?.classList.toggle("hidden");
                    closeIcon?.classList.toggle("hidden");
                });

                // Mobile Dropdowns
                const mobileDropdownTriggers = document.querySelectorAll(".mobile-dropdown-trigger");
