---
import ScrollWiggle from "./ScrollWiggle.astro";
---

<section id="store_slider" class="bg-crema py-6 md:py-24 overflow-hidden relative">

    <ScrollWiggle icon="/icon-lime-sky.svg" class="absolute max-w-20 md:max-w-full top-[0.5%] md:top-[6vh] left-[74%] md:left-[10vw] z-10" size="120px" />
    <ScrollWiggle icon="/icon-sun-ocean.svg" class="absolute max-w-32 md:max-w-full top-[5%] md:top-[12vh] right-[5%] md:right-[15vw] z-10" size="140px" />

    <div class="container relative z-20 mb-8 md:mb-0">
        <h2 class="font-futura text-citrus text-14 lg:text-8xl leading-none uppercase tracking-tight text-left md:text-center mb-10 md:mb-16 max-w-4xl mx-auto text-balance">Wherever you are, we got you.</h2>
    </div>

    <!-- Slider Container -->
    <div class="flex flex-col md:flex-row gap-6 px-5 pb-8 md:overflow-x-auto md:px-9 md:no-scrollbar md:snap-x md:snap-mandatory">
        <!-- Tarrytown -->
        <a href="/tarrytown-ny/" class="flex-none snap-center group cursor-pointer w-full md:w-[40vw] lg:w-[28vw]">
            <div class="overflow-hidden relative aspect-square">
                <img src="/location-tn-tarrytown.webp" alt="The Taco Project in Tarrytown, NY" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" loading="lazy" decoding="async" />
            </div>
            <div class="bg-sky px-4 pt-3 pb-4 flex justify-between items-center">
                <h3 class="font-futura text-ocean text-2xl leading-8 uppercase tracking-tight">Tarrytown, NY</h3>
                <svg class="w-6 h-6 text-ocean transition-transform group-hover:translate-x-1">
                    <use href="#icon-arrow-right"></use>
                </svg>
            </div>
        </a>

        <!-- Yonkers -->
